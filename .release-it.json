{
  "git": {
    "commit": true,
    "tag": true,
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "addUnreleased": true,
      "strictLatest": false,
      "filename": "./pm/CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": [
      "pnpm lint"
    ],
    "after:bump": "pnpm run build && pnpm run deploy",
    "after:release": "echo Successfully released v${version} to ${repo.repository}."
  }
}
